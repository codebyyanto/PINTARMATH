<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Login_Activity2">

    <TextView
        android:id="@+id/img_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Selamat datang"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.481" />

    <EditText
        android:id="@+id/img3_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textEmailAddress"
        tools:layout_editor_absoluteX="103dp"
        tools:layout_editor_absoluteY="401dp"
        tools:text="Email" />

    <EditText
        android:id="@+id/img4_pass"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPassword"
        tools:layout_editor_absoluteX="103dp"
        tools:layout_editor_absoluteY="470dp"
        tools:text="Password" />

    <Button
        android:id="@+id/img5_buttton"
        android:layout_width="204dp"
        android:layout_height="51dp"
        android:text="Login"
        tools:layout_editor_absoluteX="104dp"
        tools:layout_editor_absoluteY="548dp" />

    <TextView
        android:id="@+id/img6_lupaPw"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Lupa password?  "
        tools:layout_editor_absoluteX="107dp"
        tools:layout_editor_absoluteY="621dp" />

    <TextView
        android:id="@+id/img8_blmpunyaakun"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Belum punya akun? "
        tools:layout_editor_absoluteX="124dp"
        tools:layout_editor_absoluteY="665dp" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="311dp"
        android:layout_height="153dp"
        app:srcCompat="@drawable/pintarmath"
        tools:layout_editor_absoluteX="50dp"
        tools:layout_editor_absoluteY="66dp" />

    <TextView
        android:id="@+id/img_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppinsbold"
        android:text="PINTARMATH"
        android:textColor="@color/primary_blue"
        android:textSize="40sp"
        tools:layout_editor_absoluteX="73dp"
        tools:layout_editor_absoluteY="239dp" />

    <TextView
        android:id="@+id/img7_resertPw"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Reset password"
        android:textColor="#FF0000"
        tools:layout_editor_absoluteX="212dp"
        tools:layout_editor_absoluteY="621dp" />

    <TextView
        android:id="@+id/img9_daftar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Daftar"
        android:textColor="#FF0000"
        tools:layout_editor_absoluteX="248dp"
        tools:layout_editor_absoluteY="665dp" />

</androidx.constraintlayout.widget.ConstraintLayout>